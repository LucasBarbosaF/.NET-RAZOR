@model ProjetoMvc.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h2>Adicionar Produto</h2>

<div class="row">
    <div class="col-lg-12">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label>Nome*</label>
                <input asp-for="Nome" class="form-control" autocomplete="off" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Descrição*</label>
                <input asp-for="Descricao" class="form-control" autocomplete="off" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Preço*</label>
                <input asp-for="Preco" id="Preco" class="form-control" autocomplete="off" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-success">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Preco').mask('000.000.000,00', { reverse: true });
        });
    </script>
}

